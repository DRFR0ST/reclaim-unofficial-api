{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "sourceMap": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "rootDir": "./src/",
    "types": [
      "bun-types" // add Bun global
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "example"]
}
